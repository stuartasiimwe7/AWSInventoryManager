{
  "dashboard": {
    "id": null,
    "title": "Alerting & Incident Management",
    "tags": ["alerts", "incidents"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Active Alerts",
        "type": "table",
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\"}",
            "legendFormat": "{{alertname}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Alert History",
        "type": "graph",
        "targets": [
          {
            "expr": "changes(ALERTS{alertstate=\"firing\"}[1h])",
            "legendFormat": "{{alertname}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Alert Count"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 3,
        "title": "Alert Severity Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "count by (severity) (ALERTS{alertstate=\"firing\"})",
            "legendFormat": "{{severity}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Critical Alerts",
        "type": "singlestat",
        "targets": [
          {
            "expr": "count(ALERTS{alertstate=\"firing\", severity=\"critical\"})",
            "legendFormat": "Critical",
            "refId": "A"
          }
        ],
        "valueName": "current",
        "format": "short",
        "thresholds": "1,3",
        "colorBackground": true,
        "colorValue": false,
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 5,
        "title": "Warning Alerts",
        "type": "singlestat",
        "targets": [
          {
            "expr": "count(ALERTS{alertstate=\"firing\", severity=\"warning\"})",
            "legendFormat": "Warning",
            "refId": "A"
          }
        ],
        "valueName": "current",
        "format": "short",
        "thresholds": "5,10",
        "colorBackground": true,
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Alert Resolution Time",
        "type": "singlestat",
        "targets": [
          {
            "expr": "avg(ALERTS{alertstate=\"resolved\"})",
            "legendFormat": "Avg Resolution",
            "refId": "A"
          }
        ],
        "valueName": "current",
        "format": "dtdurations",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "MTTR (Mean Time To Resolution)",
        "type": "singlestat",
        "targets": [
          {
            "expr": "avg(ALERTS{alertstate=\"resolved\"})",
            "legendFormat": "MTTR",
            "refId": "A"
          }
        ],
        "valueName": "current",
        "format": "dtdurations",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 16
        }
      },
      {
        "id": 8,
        "title": "Alert Rules Status",
        "type": "table",
        "targets": [
          {
            "expr": "ALERTS",
            "legendFormat": "{{alertname}} - {{severity}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 20
        }
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
